<h1>*** Welcome to the longest word-game!***</h1>

<h1>Here is your grid</h1>
<form action="/score" method="post">
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <input type="hidden" name="start_time" value="<%=@time_now%>">
 <label for="input">Write your guess</label>
 <h1><%= @grid %></h1>
 <input type="hidden" name="grid" value="<%= @grid %>">
 <input type="text" id="input" name="attempt" placeholder="write word here">
 <input type="submit" value="Results">
</form>
